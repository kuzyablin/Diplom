<Window x:Class="DiplomWpf2.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomWpf2"
        mc:Ignorable="d"
        Title="OrderWindow" Height="1000" Width="1000">
    <Grid Background="White">
        <Grid.Resources>
            <!-- Стили из предыдущих окон -->
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Padding" Value="10"/>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Raleway"/>
                <Setter Property="Margin" Value="5 8"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="Montserrat"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Background" Value="#F56E53"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Height" Value="45"/>
                <Setter Property="MinWidth" Value="120"/>
                <Setter Property="Padding" Value="10 5"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FF1E00"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="#4CAF50"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#388E3C"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="ListBox">
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="Transparent"/>
            </Style>

            <Style TargetType="ListBoxItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border Background="Transparent" CornerRadius="8" Margin="0 5">
                                <ContentPresenter/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FFF5F5F5"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок с закругленными углами -->
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#F56E53" CornerRadius="10 10 0 0" 
            Margin="20 20 20 0" Padding="15">
            <Grid>
                <TextBlock Text="Ваш заказ" 
                     FontFamily="Playfair Display"
                     FontSize="28"
                     FontWeight="Bold"
                     Foreground="White"
                     HorizontalAlignment="Center"/>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0 0 20 0">
                    <TextBlock Text="{Binding Count, StringFormat='Кол-во товаров: {0}'}" 
                         FontSize="18"
                         Foreground="White"/>
                    <TextBlock Text="{Binding Price, StringFormat='Итого: {0} руб.'}" 
                         FontSize="18"
                         FontWeight="Bold"
                         Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Список товаров -->
        <Border Grid.Row="2" Margin="20 0 20 10" CornerRadius="0 0 10 10" 
            BorderBrush="#E0E0E0" BorderThickness="1">
            <ListBox ItemsSource="{Binding Orders}" SelectedItem="{Binding SelectedShit}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" Padding="10" Background="White" CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Изображение -->
                                <Border Grid.Column="0" Width="150" Height="100" CornerRadius="5"
                                  BorderBrush="#E0E0E0" BorderThickness="1">
                                    <Image Source="{Binding Order.IdBuker}" Stretch="UniformToFill"/>
                                </Border>

                                <!-- Информация -->
                                <StackPanel Grid.Column="1" Margin="15 0">
                                    <TextBlock Text="{Binding Buket.NameBuket}" 
                                         FontSize="18"
                                         FontWeight="SemiBold"
                                         Foreground="#333333"/>
                                    <TextBlock Text="{Binding Buket.PriceBuket, StringFormat='Цена: {0} руб.'}" 
                                         FontSize="16"
                                         Foreground="#F56E53"/>
                                </StackPanel>

                                <!-- Количество -->
                                <Border Grid.Column="2" CornerRadius="5" BorderBrush="#E0E0E0" 
                                  BorderThickness="1" Padding="10" HorizontalAlignment="Center"
                                  VerticalAlignment="Center" Margin="5">
                                    <TextBlock Text="{Binding Count, StringFormat='×{0}'}" 
                                         FontSize="16"/>
                                </Border>

                                <!-- Кнопки -->
                                <StackPanel Grid.Column="3" Orientation="Vertical" VerticalAlignment="Center">
                                    <Button Content="Удалить" 
                                      Tag="{Binding}"
                                      Click="DeleteBuket"
                                      Style="{StaticResource GreenButton}"
                                      Margin="0 0 0 5"/>
                                    <Button Content="Добавить" 
                                      Tag="{Binding}"
                                      Click="AddBuket"
                                      Background="#4CAF50"/>
                                </StackPanel>

                                 <!--Изображение--> 
                                <Border Grid.Column="0" Width="150" Height="100" CornerRadius="5"
  BorderBrush="#E0E0E0" BorderThickness="1">
                                    <Image Source="{Binding Tovar.ImageTovar}" Stretch="UniformToFill"/>
                                </Border>

                                 <!--Информация--> 
                                <StackPanel Grid.Column="1" Margin="15 0">
                                    <TextBlock Text="{Binding Tovar.NameTovar}" 
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        Foreground="#333333"/>
                                    <TextBlock Text="{Binding Buket.PriceTovar, StringFormat='Цена: {0} руб.'}" 
                                        FontSize="16"
                                        Foreground="#F56E53"/>
                                </StackPanel>

                                 <!--Количество--> 
                                <Border Grid.Column="2" CornerRadius="5" BorderBrush="#E0E0E0" 
  BorderThickness="1" Padding="10" HorizontalAlignment="Center"
  VerticalAlignment="Center" Margin="5">
                                    <TextBlock Text="{Binding Count, StringFormat='×{0}'}" 
         FontSize="16"/>
                                </Border>

                                 <!--Кнопки--> 
                                <StackPanel Grid.Column="3" Orientation="Vertical" VerticalAlignment="Center">
                                    <Button Content="Удалить" 
      Tag="{Binding}"
      Click="DeleteTovar"
      Style="{StaticResource GreenButton}"
      Margin="0 0 0 5"/>
                                    <Button Content="Добавить" 
      Tag="{Binding}"
      Click="AddTovar"
      Background="#4CAF50"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            
            
        </Border>
        
        

        <!-- Кнопки действий -->
        <Border Grid.Row="3" Grid.ColumnSpan="2" Background="#FFF9F9F9" BorderThickness="0 1 0 0" BorderBrush="#E0E0E0">
            <Grid>
                <Button Content="Назад" 
                  HorizontalAlignment="Left"
                  Margin="20 10"
                  Click="Back"
                  Style="{StaticResource GreenButton}"/>

                <Button Content="Оформить заказ" 
                  HorizontalAlignment="Right"
                  Margin="20 10"
                  Click="Order"
                  Background="#F56E53"/>
            </Grid>
        </Border>
    </Grid>
</Window>
